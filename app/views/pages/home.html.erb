<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header text-center">
        <b>Subset by Column</b><br>
        <button class="btn btn-info" type="button" id="select-all">Select All</button>
        <button class="btn btn-info" type="button" id="select-none">Select None</button>
      </div>
      <div class="list-group">
        <!-- rendered from home.js with jquery-->
      </div>
    </div>
  </div>

  <div class="col-md-8 filter">
    <!-- rendered from home.js with jquery -->
    <div class="number filter-div">
      <h3>Filter by <span class="number-id">age</span></h3>
      <hr>
      <form>
        <div class="form-row">
          <div class="form-group col-md-3">
            <label for="num-from">Select from</label>
            <input type="number" class="form-control" id="num-from" placeholder="0">
          </div>
          <div class="form-group col-md-3">
            <label for="num-to">to</label>
            <input type="number" class="form-control" id="num-to" placeholder="100">
          </div>
        </div>
        <button type="button" class="btn btn-success go-filter-button">Go</button>
      </form>
    </div>

    <div class="date filter-div">
      <h3>Filter by <span class="date-id"></span></h3>
      <hr>
      <form>
        <div class="form-row">
          <div class="form-group col-md-4">
            <label for="date-from">Start Date</label>
            <input type="date" class="form-control" id="date-from" placeholder="0">
          </div>
          <div class="form-group col-md-4">
            <label for="date-to">End Date</label>
            <input type="date" class="form-control" id="date-to" placeholder="100">
          </div>
        </div>
        <button type="button" class="btn btn-success go-filter-button">Go</button>
      </form>
    </div>
  </div>
</div>

<br />

<div class="notes col-md-10">
  <p>All durations are in days; all dates are in the form yyyy/mm/dd; all weights are in kg,
  and all temperatures are measured in &#8451;</p>
</div>

<div class="data-table">
  <%= render 'pages/table' %>
</div>

<br>
<div class="text-center pagination-div">
  <div class="page_info">
    <%= page_entries_info @observations %>
  </div>
  <%= will_paginate @observations, :container => false, 
  renderer: WillPaginate::ActionView::BootstrapLinkRenderer, 
  list_classes: %w(pagination justify-content-center) %>
</div>