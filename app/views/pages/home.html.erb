<%= javascript_include_tag 'home.js' %>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header text-center">
        <b>Subset by Column</b>
        <br>
        <button class="btn btn-info" type="button" id="select-all">Select All</button>
        <button class="btn btn-info" type="button" id="select-none">Select None</button>
      </div>
      <div class="list-group subset-group">
        <!-- rendered from home.js with jquery-->
      </div>
    </div>
  </div>

  <div class="col-md-8 filter">
    <!-- rendered from home.js with jquery -->
    <%= render 'pages/filter_forms' %>
  </div>
</div>

<br>

<div id="dashboard">
  <%= image_tag "loader.gif", id:"loader", class:"loader-img" %>
</div>
<%= javascript_include_tag 'prism-dashboard.js' %>

<div class="notes col-md-12 text-muted">
  <p>*Graphs drawn on 1000 rows for performance</p>
</div>

<div id="content">
  <div class="loading">
    <br>
    <div class="text-center">
      <b>Loading Filtered Graphs</b>
      <div class="spinner-border text-info" role="status"></div>
    </div>
  </div>
  <!-- rendered from home.js with d3 -->
</div>
<div class="data-table">
  <%= render 'pages/table' %>
</div>

<br>
<div class="text-center pagination-div">
  <div class="page_info">
    <%= page_entries_info @observations %>
  </div>
  <%= will_paginate @observations, :container => false,
  renderer: WillPaginate::ActionView::BootstrapLinkRenderer,
  list_classes: %w(pagination justify-content-center) %>
  <div class="notes col-md-12 text-muted">
    <p>*All durations are in days, all dates are in the form YYYY/MM/DD, all weights are in kg,
    and all temperatures are measured in &#8451;</p>
  </div>
</div>
